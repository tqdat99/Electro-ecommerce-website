<body>
    <%include header.ejs%>

        <!-- BREADCRUMB -->
        <div id="breadcrumb" class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12">
                        <ul class="breadcrumb-tree">
                            <li><a href="#">Trang chủ</a></li>
                            <li class="active">Tài khoản</li>
                        </ul>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /BREADCRUMB -->

        <!--================Login Box Area =================-->
        <div class="container">
            <div class="row ">
                <div class="col-lg-6">
                    <h3>Chỉnh sửa tài khoản</h3>
                    <form action="/user/profile?username=<%=user.username%>" method="post">
                        <div class="form-group">
                            <label>Tên tài khoản</label>
                            <p>
                                <%=user.username%>
                            </p>
                        </div>
                        <div class="form-group">
                            <label>Họ tên</label>
                            <input type="text" class="form-control" placeholder="" name="fullname" value="<%=userInfo.fullname%>">
                        </div>
                        <div class="form-group">
                            <label>Ngày sinh</label>
                            <input type="date" class="form-control" placeholder="" name="birthday" value="<%=userInfo.birthday%>">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" placeholder="" name="email" value="<%=userInfo.email%>">
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input type="text" class="form-control" placeholder="" name="phone" value="<%=userInfo.phone%>">
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <input type="text" class="form-control" placeholder="" name="address" value="<%=userInfo.address%>">
                        </div>
                        <div class="form-group">
                            <button type="submit" value="submit" class="button">Lưu</button>
                        </div>
                        <a href="/user/change-password" class="button">
                            Đổi mật khẩu
                        </a>
                    </form>
                </div>
            </div>
        </div>
        <!--================End Login Box Area =================-->


        <section class="cart_area">
            <div class="container">
                <div class="cart_inner">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">ID đơn hàng</th>
                                    <th scope="col">Tổng giá</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <%Orders.forEach(function(order){%>
                                    <tr>
                                        <td>
                                            <p>
                                                <%=order.orderid%>
                                            </p>
                                        </td>
                                        </td>
                                        <td>
                                            <p>
                                                <%= new Intl.NumberFormat().format(order.sum)%>
                                            </p>
                                        </td>
                                        <td>
                                            <a href="/user/order?orderid=<%=order.orderid%>">
                                                <p class="btn-link">Chi tiết</p>
                                            </a>
                                        </td>
                                    </tr>
                                    <%})%>
                            </tbody>
                        </table>
                    </div>
                    <% if (pages > 0) { %>
                        <ul class="store-pagination">
                            <% if (current == 1) { %>
                                <li class="disabled" id="pageFirst"><a>Đầu</a></li>
                                <% } else { %>
                                    <li><a id="pageFirst">Đầu</a></li>
                                    <% } %>
                                        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                            <% if (i !== 1) { %>
                                                <li class="disabled"><a>...</a></li>
                                                <% } %>
                                                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>

                                                        <% if (i == current) { %>
                                                            <li class="active">
                                                                <a style="color:#ffffff">
                                                                    <%= i %>
                                                                </a>
                                                            </li>
                                                            <% } else { %>
                                                                <li>
                                                                    <a id="page<%=i%>">
                                                                        <%= i %>
                                                                    </a>
                                                                </li>
                                                                <% } %>

                                                                    <% if (i == Number(current) + 4 && i < pages) { %>
                                                                        <li class="disabled "><a>...</a></li>
                                                                        <% } %>
                                                                            <% } %>
                                                                                <% if (current == pages) { %>
                                                                                    <li class="disabled" id="pageLast"><a>Cuối</a></li>
                                                                                    <% } else { %>
                                                                                        <li><a id="pageLast">Cuối</a>
                                                                                        </li>
                                                                                        <% } %>
                        </ul>
                        <% } %>
                </div>
            </div>
        </section>

        <%include footer.ejs%>


