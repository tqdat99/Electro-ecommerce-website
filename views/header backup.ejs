<!-- HEADER -->
<header>
    <!-- TOP HEADER -->
    <div id="top-header">
        <div class="container">
            <ul class="header-links pull-left">
                <li><a href="#"><i class="fa fa-phone"></i> 0379990216</a></li>
                <li><a href="#"><i class="fa fa-envelope-o"></i> email@email.com</a></li>
                <li><a href="#"><i class="fa fa-map-marker"></i> 51T Quận 6</a></li>
            </ul>
            <%if (typeof user === 'undefined' || user == null){%>
                <ul class="header-links pull-right">
                    <li><a href="/user/register"><i class="fa fa-plus"></i>Đăng ký</a></li>
                    <li><a href="/user/login"><i class="fa fa-sign-in"></i>Đăng nhập</a></li>
                </ul>
                <%} else {%>
                    <ul class="header-links pull-right">
                        <p style="display:inline; color:#ffffff; padding-right: 8px;"> Xin chào </p>
                        <li><a href="/user/profile"><i class="fa fa-user-o"></i><%=user.fullname%></a></li>
                        <form action="/user/logout" method="get">
                            <button type="submit">Đăng xuất</button>
                        </form>
                    </ul>
                    <%}%>
        </div>
    </div>
    <!-- /TOP HEADER -->


    <!-- MAIN HEADER -->
    <div id="header">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- LOGO -->
                <div class="col-md-3">
                    <div class="header-logo">
                        <a href="/" class="logo">
                            <img src="./img/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <!-- /LOGO -->
                <!-- SEARCH BAR -->
                <div class="col-md-6">
                    <div class="header-search">
                        <form action="/store/filter" method="get">
                            <input class="input" name="key" placeholder="Tìm kiếm sản phẩm">
                            <button class="search-btn">Tìm</button>
                        </form>
                    </div>
                </div>
                <!-- /SEARCH BAR -->
                <!-- ACCOUNT -->
                <div class="col-md-3 clearfix">
                    <div class="header-ctn">
                        <!-- Cart -->
                        <div class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                <i class="fa fa-shopping-cart"></i>
                                <span>Giỏ hàng</span>
                                <div id="header-qty" class="qty"></div>
                            </a>
                            <div class="cart-dropdown">
                                <div class="cart-list">
                                    <div class="product-widget">
                                        <div class="product-img">
                                            <img src="./img/product01.png" alt="">
                                        </div>
                                        <div class="product-body">
                                            <h3 class="product-name"><a href="#">laptop asus rog strix g g531gd-al025t</a></h3>
                                            <h4 class="product-price"><span class="qty">1x</span>$32.000.000đ</h4>
                                        </div>
                                        <button class="delete"><i class="fa fa-close"></i></button>
                                    </div>

                                    <div class="product-widget">
                                        <div class="product-img">
                                            <img src="./img/product02.png" alt="">
                                        </div>
                                        <div class="product-body">
                                            <h3 class="product-name"><a href="#">Tai nghe On-ear Sony MDRZX310APBCE (Đen)</a></h3>
                                            <h4 class="product-price"><span class="qty">2x</span>340.000đ</h4>
                                        </div>
                                        <button class="delete"><i class="fa fa-close"></i></button>
                                    </div>
                                </div>
                                <div class="cart-summary">
                                    <small>Có 4 sản phẩm</small>
                                    <h5>Tổng: 75.245.000đ</h5>
                                </div>
                                <div class="cart-btns">
                                    <a href="/cart">Giỏ hàng</a>
                                    <a href="/checkout">Thanh toán  <i class="fa fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        </div>
                        <!-- /Cart -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav id="navigation" style="margin-bottom: 0px;">
        <!-- container -->
        <div class="container">
            <!-- responsive-nav -->
            <div id="responsive-nav">
                <!-- NAV -->
                <ul class="main-nav nav navbar-nav">
                    <li id="home"><a href="/">Home</a></li>
                    <li id="store"><a href="/store/filter?Type=All">Cửa hàng</a></li>
                </ul>
                <!-- /NAV -->
            </div>
            <!-- /responsive-nav -->
        </div>
        <!-- /container -->
    </nav>
</header>

<script src="vendors/jquery/jquery-3.2.1.min.js"></script>
<script src="vendors/bootstrap/bootstrap.bundle.min.js"></script>
<script src="vendors/skrollr.min.js"></script>
<script src="vendors/owl-carousel/owl.carousel.min.js"></script>
<script src="vendors/nice-select/jquery.nice-select.min.js"></script>
<script src="vendors/jquery.ajaxchimp.min.js"></script>
<script src="vendors/mail-script.js"></script>
<script src="js/main.js"></script>
<script>
    var currentHref = window.location.href
    if (currentHref.includes('store')) {
        nav = document.getElementById("store")
        nav.setAttribute("class", "active")
    } else {
        nav = document.getElementById("home")
        nav.setAttribute("class", "active")
    }
</script>