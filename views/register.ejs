<body>
    <%include header.ejs%>

        <!-- BREADCRUMB -->
        <div id="breadcrumb" class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12">
                        <ul class="breadcrumb-tree">
                            <li><a href="#">Trang chủ</a></li>
                            <li class="active">Đăng nhập</li>
                        </ul>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /BREADCRUMB -->

        <!--================Login Box Area =================-->
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <h3>Đăng ký</h3>
                    <form name="myForm" onsubmit="return validateForm()" action="/user/register" method="post">
                        <div class="form-group">
                            <label>Tên tài khoản</label>
                            <input type="text" class="form-control" placeholder="" name="username" required>
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input type="password" class="form-control" placeholder="" name="password" required>
                        </div>
                        <div class="form-group">
                            <label>Xác nhận mật khẩu</label>
                            <input type="password" class="form-control" placeholder="" name="repassword" required>
                        </div>
                        <div class="form-group">
                            <label>Họ tên</label>
                            <input type="text" class="form-control" placeholder="Nguyễn Văn A" name="fullname" required>
                        </div>
                        <div class="form-group">
                            <label>Ngày sinh</label>
                            <input type="date" class="form-control" placeholder="tháng/năm/ngày" name="birthday" required>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" placeholder="example@gmail.com" name="email" required>
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input type="text" class="form-control" placeholder="0379990216" name="phone" required>
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <input type="text" class="form-control" placeholder="51T Quận 6" name="address" required>
                        </div>
                        <p>
                            <%= msg%>
                        </p>
                        <div class="form-group">
                            <button type="submit" value="submit" class="button">Đăng ký</button>
                        </div>
                    </form>

                </div>
                <div class="col-lg-2"></div>
                <div class="col-lg-6">
                    <h3>Đăng nhập</h3>
                    <a class="gray_btn" href="/user/login">Đăng nhập</a>
                </div>
            </div>
        </div>
        </section>
        <!--================End Login Box Area =================-->


        <%include footer.ejs%>


            <script src="js/jquery.min.js"></script>
            <script src="js/bootstrap.min.js"></script>
            <script src="js/slick.min.js"></script>
            <script src="js/nouislider.min.js"></script>
            <script src="js/jquery.zoom.min.js"></script>
            <script src="js/main.js"></script>
            <script src="vendors/jquery/jquery-3.2.1.min.js"></script>
            <script src="vendors/bootstrap/bootstrap.bundle.min.js"></script>
            <script src="vendors/skrollr.min.js"></script>
            <script src="vendors/owl-carousel/owl.carousel.min.js"></script>
            <script src="vendors/nice-select/jquery.nice-select.min.js"></script>
            <script src="vendors/jquery.ajaxchimp.min.js"></script>
            <script src="vendors/mail-script.js"></script>

            <script type="text/javascript">
                function validateForm() {
                    var username = document.forms["myForm"]["username"].value;
                    var fullname = document.forms["myForm"]["fullname"].value;
                    var phone = document.forms["myForm"]["phone"].value;
                    var password = document.forms["myForm"]["password"].value;
                    var repassword = document.forms["myForm"]["repassword"].value;

                    if (username.length < 6) {
                        alert("Tên tài khoản cần ít nhất 6 kí tự");
                        return false;
                    }
                    if (fullname.length < 6) {
                        alert("Họ tên không hợp lệ");
                        return false;
                    }
                    if (password.length < 6) {
                        alert("Mật khẩu cần ít nhất 6 kí tự");
                        return false;
                    }
                    if (password != repassword) {
                        alert("Xác nhận mật khẩu không chính xác");
                        return false;
                    } 
                    var vnf_regex = /((09|03|07|08|05)+([0-9]{8})\b)/g;
                    if (vnf_regex.test(phone) == false)
                    {
                        alert("Số điện thoại không hợp lệ");
                        return false;
                    }
                }
            </script>
            
</body>

</html>