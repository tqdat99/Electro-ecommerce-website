<% if (user) { %>
    <script type="text/javascript">
        $(function() {
            if(localStorage.cart) {
                var cart = JSON.parse(localStorage.cart)
                var payload = []
                for (var productid in cart) {
                    var obj = {}
                    obj['productid'] = productid
                    obj['quantity'] = cart[productid].quantity
                    payload.push(obj)
                }
                $.post("/cart/import", { items: payload }, function(){
                    localStorage.clear()
                    document.location.reload()
                });
            } else {
                $.get( "/cart/count", function(cartcount) {
                    $("#header-qty").html(cartcount)
                });
                $.get( "/cart/subview", function(subview) {
                    $(".cart-dropdown").html(subview)
                }); 
            }
        });
    </script>
<% } else { %>
    <script type="text/javascript">
        $(function() {
            if (!localStorage.cart) {
                $("#header-qty").html(0)
                $(".cart-dropdown").html("<div>Empty cart</div>")
            } else {
                var cart = JSON.parse(localStorage.cart)
                $("#header-qty").html(Object.keys(cart).length)

                var htmlString = ""
                for (var productid in cart) {
                    item = cart[productid]
                    htmlString += '<div class="cart-list">'
                    htmlString +=     '<div class="product-widget">'
                    htmlString +=         '<div class="product-img">'
                    htmlString +=             '<img src="' + item.picture + '">'
                    htmlString +=         '</div>'
                    htmlString +=         '<div class="product-body">'
                    htmlString +=             '<h3 class="product-name"><a href="#">'+ item.name +'</a></h3>'
                    htmlString +=             '<h4 class="product-price"><span class="qty">'+ item.price +'x</span>'
                    htmlString +=                  item.quantity
                    htmlString +=             '</h4>'
                    htmlString +=         '</div>'
                    htmlString +=     '</div>'
                    htmlString += '</div>'
                }

                htmlString +=   '<div class="cart-summary">'
                htmlString +=       '<small>Có ??? sản phẩm</small>'
                htmlString +=       '<h5 id="sumsum">Tổng: 75.245.000đ</h5>'
                htmlString +=   '</div>'
                htmlString +=   '<div class="cart-btns">'
                htmlString +=       '<a href="/user/login">Giỏ hàng</a>'
                htmlString +=       '<a href="/user/login">Thanh toán  <i class="fa fa-arrow-circle-right"></i></a>'
                htmlString +=   '</div>'
                $(".cart-dropdown").html(htmlString)
            }
        });
    </script>
